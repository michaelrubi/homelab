{
    "extends": [
        "config:base"
    ],
    "ignoreUnstable": true,
    "kubernetes": {
        "fileMatch": [
            "\\.yaml$"
        ]
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": false
        }
    ]
}